---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="container mx-auto px-4">
			<div class="hero text-center py-16">
				<h1 class="text-4xl font-bold mb-4">🎲 Welcome to the Board Game Club!</h1>
				<p class="text-xl mb-8">
					Join us for exciting game nights, make new friends, and discover amazing board games!
				</p>
			</div>

			<section class="features grid md:grid-cols-3 gap-8 py-12">
				<div class="feature-card text-center p-6 border rounded-lg">
					<h2 class="text-2xl font-bold mb-4">🗓️ Weekly Meetups</h2>
					<p>Join us every Thursday at 7 PM for our regular game nights. From strategy to party games, there's something for everyone!</p>
				</div>
				<div class="feature-card text-center p-6 border rounded-lg">
					<h2 class="text-2xl font-bold mb-4">🏆 Tournaments</h2>
					<p>Participate in our monthly tournaments and compete for prizes. Show off your skills in various game categories!</p>
				</div>
				<div class="feature-card text-center p-6 border rounded-lg">
					<h2 class="text-2xl font-bold mb-4">📚 Game Library</h2>
					<p>Access our extensive collection of 200+ board games. Members can even borrow games for home play!</p>
				</div>
			</section>

			<section class="upcoming-events bg-gray-100 p-8 rounded-lg my-12">
				<h2 class="text-3xl font-bold mb-6">📅 Upcoming Events</h2>
				<ul class="space-y-4">
					<li class="flex items-center gap-4">
						<span class="font-bold">March 30th:</span> Catan Tournament
					</li>
					<li class="flex items-center gap-4">
						<span class="font-bold">April 5th:</span> Newcomers Welcome Night
					</li>
					<li class="flex items-center gap-4">
						<span class="font-bold">April 12th:</span> Strategy Games Workshop
					</li>
				</ul>
			</section>

		</main>
		<Footer />
	</body>
</html>
